@{
    ViewData["Title"] = "List of Post";
}

    <div class="container--column">

        <h1>Hi, @ViewBag.User</h1>


        <form asp-controller="Post" asp-action="Create" method="post"  class="card">
            <input type="text" placeholder="Message" required="" name="message" class="MessageField" />
            <input type="submit" value="Add" class="button button-end" />
        </form>

        <ul>
            @foreach (var item in ViewBag.Posts)
            {
                <li>
                    <div class="card card--min">
                        <p class="message_post">@item.Message</p>
                        <p class="PostedBy">-posted by @item.UserNamePostedBy</p>
                    </div>
                </li>
            }
        </ul>
    </div>